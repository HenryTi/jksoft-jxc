QUERY SearchProduct ver 0.2 (
    key CHAR(50),
)
PAGE (
    id ID desc,
    no CHAR(50),
    name CHAR(50),
) {
    PAGE SELECT a.id, a.no, a.name
        FROM Product as a
        WHERE a.id<$pageStart AND SEARCH(a.no, a.name LIKE key)
        ORDER BY a.id desc
        LIMIT $pageSize;
};

QUERY SearchProductForPurchase ver 0.2 (
    key CHAR(50),
)
PAGE (
    id ID desc,
    no CHAR(50),
    name CHAR(50),
