
Query GetDetails (
    id ID,
)
RETURNS ret (
    * of Detail,
) {
    INTO ret SELECT * a FROM Detail as a WHERE a.sheet=id;
};

Query GetDetailQPAs (
    id ID,
)
RETURNS ret (
    * of DetailQPA,
) {
    INTO ret SELECT * a FROM DetailQPA as a WHERE a.sheet=id;
};

Query GetDetailOrigin (
    id ID,
)
RETURNS ret (
    * of DetailOrigin,
    originSheet ID,
    originItem ID,                -- 商品不同包装或者批次，甚至不同的人或者单位, 也可以指向源单明细
    originValue VALUE,
    originRowCount INT,
) {
    INTO ret SELECT * a
        , b.sheet as originSheet, b.item as originItem, b.value as originValue
        , (select count(*) from Detail as d WHERE d.sheet=b.sheet) as originRowCount
        FROM DetailOrigin as a JOIN Detail as b ON b.id=a.origin
        WHERE a.sheet=id;
};

Query GetDetailFromOrigin (
    id ID,
)
RETURNS ret (
    origin ID,
    originSheet ID,
    originItem ID,                -- 商品不同包装或者批次，甚至不同的人或者单位, 也可以指向源单明细
    originValue VALUE,
    done VALUE,
) {
    INTO ret SELECT a.id as origin, a.sheet as originSheet, a.item as originItem
        , a.value as originValue, ifnull(b.done, 0) as done
        FROM Detail as a
            LEFT JOIN Done as b ON b.id=a.id
        WHERE a.sheet=id AND a.value<>b.done;
};

