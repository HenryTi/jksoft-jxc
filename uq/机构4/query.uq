QUERY 查询职员 '查询职员' (
    searchKey '关键字' CHAR,
) {
    FROM 职员信息
        COLUMN (
            ID ASC,
            %ex,
            %no,
        )
        WHERE SEARCH(%no, %ex LIKE searchKey) 
    ;
}

QUERY 采购员查询供应商 '采购员查询供应商' ( 
    searchKey '关键字' CHAR,
    采购员 ATOM, 
    --p1 INT, 
    --p2 INT,
) {
    FROM 供应商信息 OF 采购员供应商关联 ON 采购员 
        COLUMN (
            ID ASC,   
            %ex,
            %no,
            %客户类型,
            %经营许可证号,      
            %经营许可证号有效期至,
            %地址, 
            %电话,
            %统一社会信用代码,
            %采购员,
            %经营范围, 
        )
        WHERE SEARCH(%ex, %no LIKE searchKey) -- AND %采购员=采购员
    ;
}

QUERY 查询货品 '查询货品' (
    供应商 ATOM,
    searchKey '关键字' CHAR,
    --maxRetailPrice '最大零售价' DEC := 11,
) {
    FROM 货品信息|医疗器械|药品信息  OF 供应商货品关联 ON 供应商
        COLUMN ( 
            ID ASC,
            --BAN '零售价过高' = (#价格.零售价(%id))>ifnull(maxRetailPrice, 10000000000),
            price '零售价' = (#价格.零售价(%id)),
            wholesale '批发价' = (#价格.批发价(%id)),
            %通用名, 
            %规格,
            %生产厂商,
            %计量单位,
            %包装,
            %批准文号,
            %双人验收,
            %双人复核,
            %no,--编号
            %ex,--名称
        )
        WHERE SEARCH(%no, %ex LIKE searchKey) 
    ;
}

QUERY 查询库存 '查询库存' (
    searchKey '关键字' CHAR,
    c, d, e, 
) {
    VAR v1 INT = c; 
    VAR p2 CHAR(200) = e;
    FROM 货品信息|药品信息 
        COLUMN (
            ID ASC,  
            库存数量 = (#库存.数量(%id)),--查不出库存数量
            采购数量 = (#采购.数量(%id)),
            销售数量 = (#销售.数量(%id)),
            %no,
            %ex,
            %规格,
            %生产厂商, 
        )
        WHERE SEARCH(%no, %ex LIKE searchKey)
    ;
}

