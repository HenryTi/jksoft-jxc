QUERY 查询客商 '查询客商' (
    searchKey '关键字' CHAR,
) {
    FROM 客户信息 
        COLUMN (
            ID ASC,  
            cola = 1,
            %联系人,
            %资信度,
            %no,--编号
            %ex,--名称 
        )
        WHERE SEARCH(%no, %ex LIKE searchKey)
    ;
}



