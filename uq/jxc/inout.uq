ID IOQueue (
    id MINUTE,
    KEY endPoint ID, -- IOEndPoint,
    -- KEY base ID,                -- phrase of IN and OUT
    KEY id,
    value JSON,
    done TINYINT,                   -- 0: 未处理，1：已完成，-1: 出错
    orgId ID,                       -- 防止重复，暂不处理
    INDEX endPoint_orgId(endPoint, orgId) UNIQUE,
);

IX IOInOut (
    i TINY,                         -- 0: out, 1: in
    x,                              -- 待处理的IOQueue id
);

IDX IODone (
    id,
    endPoint ID, -- IOEndPoint,
    result JSON,
    INDEX endPoint_id(endPoint, id) UNIQUE,
);
/*
